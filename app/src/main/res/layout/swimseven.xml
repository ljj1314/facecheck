<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swingcardlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpic"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_text_schoolname1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="33dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/home_l_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="73dp"
           
            android:layout_marginLeft="130dp"
            android:layout_marginRight="130dp"
            android:layout_marginBottom="73dp"
            android:background="@drawable/kuang_pic"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="382dp"
                    android:layout_height="404dp"
                    android:layout_marginLeft="43dp" >

                    <LinearLayout
                        android:id="@+id/cameraView"
                        android:layout_width="300dp"
                        android:layout_height="354dp"
                        android:layout_marginBottom="29dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="39dp"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/sfviewim"
                        android:layout_width="300dp"
                        android:layout_height="354dp"
                        android:layout_marginBottom="29dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="39dp"
                        android:scaleType="fitXY"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_l_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="100dp"
                    android:orientation="vertical" >

                    
                    <ImageView 
                        
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/welcome_icon"
                        android:scaleType="fitCenter"
                        />
                    
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="58dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="53dp"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/home_text_student_id"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                       		 android:layout_marginRight="30dp"
                                android:layout_marginTop="3dp"
                                android:text=""
                                
                                 android:gravity="center"
                                 android:textStyle="bold"
                                android:textColor="#593525"
                                android:textSize="34dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="53dp"
                            android:layout_marginTop="20dp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="53dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/home_text_student_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                               android:layout_marginLeft="10dp"
                        	android:layout_marginRight="30dp"
                                android:layout_marginTop="5dp"
                                android:text=""
                                 android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="#593525"
                                android:textSize="34dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="110dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/startsports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/startsports" />

                    <ImageView
                        android:id="@+id/endsoprts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/endsoprts" />

                    <ImageView
                        android:id="@+id/sporton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sportond" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>