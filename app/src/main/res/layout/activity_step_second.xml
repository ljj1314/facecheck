<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".WifiListActivity" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" 
        android:gravity="right">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="180dp"
            android:paddingRight="20dp"
            android:src="@drawable/selector_back_button"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingBottom="150dp"
        android:paddingTop="150dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2"
            android:textColor="@android:color/white"
            android:textSize="68sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="参数设置"
            android:textColor="@android:color/white"
            android:textSize="38sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/white_bg" >
            <Spinner
                 android:id="@+id/sp_att_platform"
                 style="@style/SpinnerStyle" 
                 android:spinnerMode="dropdown"
                 android:layout_marginRight="20dp"
                 android:focusable="true"
                 android:background="@drawable/selector_transparent_gray"
                 android:dropDownVerticalOffset="30dp"/> 
            <LinearLayout
                android:id="@+id/ll_ethernet"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="60dp"
                android:paddingRight="60dp" >

                <TextView
                    android:id="@+id/textView_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="服务平台"
                    android:textColor="@color/black_333333"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/state_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="ww"
                    android:textColor="@color/blue_45b1ea"
                    android:textSize="23sp" />

                <ImageView
                    android:id="@+id/round_icon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>               
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bg"
            android:orientation="vertical"
            android:visibility="gone" >
            <Spinner
                 android:id="@+id/sp_att_platform_region"
                 style="@style/SpinnerStyle" 
                 android:spinnerMode="dropdown"
                 android:layout_marginRight="20dp"
                 android:focusable="true"
                 android:background="@drawable/selector_transparent_gray"
                 android:dropDownVerticalOffset="30dp"/> 

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="60dp"
                android:paddingRight="60dp" >

                <TextView
                    android:id="@+id/textView_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="服务区域"
                    android:textColor="@color/black_333333"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/state_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="请选择"
                    android:textColor="@color/gray_c4c4c4"
                    android:textSize="23sp" />

                <ImageView
                    android:id="@+id/round_icon_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_region_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/white_bg"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:paddingLeft="60dp"
            android:paddingRight="70dp"
            android:paddingTop="40dp"
            android:visibility="gone"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考勤上报URL"
                    android:textColor="@color/black_333333"
                    android:textSize="23sp" />

                <EditText
                    android:id="@+id/url_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/frame_gray"
                    android:padding="10dp"
                    android:textSize="23sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考勤图片上报URL"
                    android:textColor="@color/black_333333"
                    android:textSize="23sp" />

                <EditText
                    android:id="@+id/url_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/frame_gray"
                    android:padding="10dp"
                    android:textSize="23sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家长图片下载URL"
                    android:textColor="@color/black_333333"
                    android:textSize="23sp" />

                <EditText
                    android:id="@+id/url_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/frame_gray"
                    android:padding="10dp"
                    android:textSize="23sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡信息下载URL"
                    android:textColor="@color/black_333333"
                    android:textSize="23sp" />

                <EditText
                    android:id="@+id/url_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/frame_gray"
                    android:padding="10dp"
                    android:textSize="23sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体温上报URL"
                    android:textColor="@color/black_333333"
                    android:textSize="23sp" />

                <EditText
                    android:id="@+id/url_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/frame_gray"
                    android:padding="10dp"
                    android:textSize="23sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_blue_button"
            android:gravity="center"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="下一步"
            android:textColor="@android:color/white"
            android:textSize="38sp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>